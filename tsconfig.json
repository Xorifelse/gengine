{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "esnext",
      "dom"
    ],

    "baseUrl": "src/",
    "paths": {
      "@/*": [
        "/*"
      ],
      "@errors/*": [
        "lib/errors/*"
      ],
      "@gql": [
        "generated/index"
      ],
      "@interfaces/*": [
        "lib/interfaces/*"
      ]
    },

    "allowJs": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.gql"
  ]
}