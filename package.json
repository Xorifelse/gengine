{
  "name": "gengine",
  "version": "0.0.2",
  "description": "backend of the game engine",
  "main": "build/index.js",
  "author": "Johan <johan@codaisseur.com>",
  "license": "MIT",
  "scripts": {
    "start": "dotenv bin/scripts/start",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "gql:types": "dotenv bin/scripts/types",
    "gql:schema": "dotenv bin/scripts/schema"
  },
  "dependencies": {
    "apollo-server": "^2.5.0",
    "apollo-server-koa": "^2.5.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^14.3.0",
    "graphql-cli": "^3.0.11",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "prisma": "^1.32.2",
    "prisma-binding": "^2.3.10",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.1.3",
    "@graphql-codegen/typescript": "1.1.3",
    "@graphql-codegen/typescript-resolvers": "^1.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.2.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.0.0",
    "dotenv-cli": "^2.0.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix && yarn lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json"
    ]
  }
}
