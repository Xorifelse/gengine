{
  "name": "gengine",
  "version": "1.0.0",
  "description": "backend of the game engine",
  "main": "build/index.js",
  "author": "Johan <johan@codaisseur.com>",
  "license": "MIT",
  "scripts": {
    "start": "bin/scripts/start",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "gql:gen": "dotenv -- graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "apollo-server": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "graphql": "^14.2.1",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.1.1",
    "@graphql-codegen/typescript": "1.1.1",
    "@graphql-codegen/typescript-resolvers": "^1.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.2.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^11.13.8",
    "dotenv-cli": "^2.0.0",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.11",
    "prettier": "^1.17.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix && yarn lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json"
    ]
  }
}
